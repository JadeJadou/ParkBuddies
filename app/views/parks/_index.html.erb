<div class="container mt-3">
<h1>choisis le parc le plus près de chez toi</h1>
<p>Faites votre choix parmi les propositions ci-dessous:</p>
<div class="card-wrap cards">

  <% @parks.each do | shark | %>
    <%= link_to shark_path(shark), class:"text-decoration-none", style:"color: inherit" do %>
      <div class="card-product">
        <%= cl_image_tag shark.photos.first.key %>
        <div class="card-product-infos">
          <h2><%= shark.name %></h2>
          <p>Bio: <%= truncate(shark.description, length:50) %></p>
          <p style="position:relative;left:330px"> € <%= shark.price_per_day %>/jour<p>
          </div>
      </div>
      <% end %>
    <% end %>
</div>

<div style="width: 100%; height: 400px; p-20" class="photo"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
