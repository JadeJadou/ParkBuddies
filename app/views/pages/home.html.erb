<br>
  <div class="container">
    <div class="container mt-3 text-center">
      <%= form_with url: "/", method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "input",
              placeholder: "Rechercher un parc par nom, par ville..."
          %>
          <button class="loupe" type="submit">
            <i class="fa-solid fa-magnifying-glass fa-lg" style="color: #7f7f7f;"></i>
          </button>
      <% end %>
  </div>
  <div style="margin-top:2px" class="map-show"
    data-controller="map"
